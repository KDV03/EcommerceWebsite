@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-page">
    <div class="container">
        <div class="auth-container auth-container-small">
            <div class="auth-card">
                <div class="auth-header">
                    <h1>Forgot Your Password?</h1>
                    <p>Enter your email and we'll send you a reset link</p>
                </div>

                <form asp-action="ForgotPassword" method="post" class="auth-form">
                    <div asp-validation-summary="All" class="validation-summary"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-input" placeholder="your.email@example.com" autofocus />
                        <span asp-validation-for="Email" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-large btn-full">
                            Send Reset Link
                        </button>
                    </div>

                    <div class="auth-footer">
                        <p>Remember your password? <a asp-action="Login">Sign in here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
